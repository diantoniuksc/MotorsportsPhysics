@page "/race-menu"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web

<PageTitle>Select Difficulty</PageTitle>

<div class="container mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-10">
  <h1 class="text-3xl font-bold mb-6">Choose your challenge</h1>
  <p class="text-gray-700 mb-8">Pick a difficulty to start the Cornering Dynamics race-quiz. You can always come back and try another mode.</p>

  <div class="grid gap-6 md:grid-cols-3">
    <div class="rounded-xl border border-primary/20 bg-white p-6 shadow-sm flex flex-col">
      <h2 class="text-xl font-semibold mb-2">Easy</h2>
  <p class="text-gray-600 mb-4">Animated track + one-question-at-a-time with explanations. No rivals, no timer.</p>
      <a class="mt-auto inline-flex items-center justify-center rounded-lg bg-primary px-4 py-2 font-semibold text-white hover:bg-opacity-90"
         href="/race-quiz?difficulty=easy">Start</a>
    </div>

    <div class="rounded-xl border border-primary/20 bg-white p-6 shadow-sm flex flex-col">
      <h2 class="text-xl font-semibold mb-2">Medium</h2>
      <p class="text-gray-600 mb-4">Race rivals. Explanations on. No timer.</p>
      <a class="mt-auto inline-flex items-center justify-center rounded-lg bg-primary px-4 py-2 font-semibold text-white hover:bg-opacity-90"
         href="/race-quiz?difficulty=medium">Start</a>
    </div>

    <div class="rounded-xl border border-primary/20 bg-white p-6 shadow-sm flex flex-col">
      <h2 class="text-xl font-semibold mb-2">High</h2>
      <p class="text-gray-600 mb-4">Head-to-head race with a countdown. Explanations off.</p>
      <a class="mt-auto inline-flex items-center justify-center rounded-lg bg-primary px-4 py-2 font-semibold text-white hover:bg-opacity-90"
         href="/race-quiz?difficulty=high">Start</a>
    </div>
  </div>

  <div class="mt-8">
    <a class="text-primary hover:underline" href="/apex">Back to Apex</a>
  </div>
</div>
